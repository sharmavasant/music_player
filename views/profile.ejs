<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Spotify Profile</title>
    <style>
      body {
        margin: 0;
        font-family: "Arial", sans-serif;
        background-color: #121212;
        color: white;
      }

      header {
        background-color: #1db954;
        padding: 20px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
      }

      header img {
        border-radius: 50%;
        width: 60px;
        height: 60px;
        object-fit: cover;
        margin-right: 20px;
      }

      header h1 {
        font-size: 24px;
        margin: 0;
      }

      .profile-info {
        display: flex;
        align-items: center;
      }

      .container {
        padding: 20px;
      }

      h2 {
        margin-bottom: 20px;
        color: #1db954;
      }

      .playlists {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
      }

      .playlist-card {
        background-color: #1e1e1e;
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.3s ease;
        cursor: pointer;
      }

      .playlist-card:hover {
        transform: scale(1.05);
      }

      .playlist-card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
      }

      .playlist-card .details {
        padding: 15px;
      }

      .playlist-card .details h3 {
        margin: 0;
        margin-bottom: 8px;
        font-size: 18px;
      }

      .playlist-card .details p {
        margin: 0;
        color: #b3b3b3;
      }

      footer {
        text-align: center;
        padding: 20px;
        color: #b3b3b3;
      }
    </style>
  </head>
  <body>
    <header>
      <div class="profile-info">
        <img id="profile-image" src="" alt="Profile Picture" />
        <h1 id="display-name">your Name</h1>
      </div>
    </header>

    <div class="container">
      <h2>Your Playlists</h2>
      <div class="playlists" id="playlists"></div>
    </div>

    <footer>Made with ❤️ using Spotify API</footer>

    <script>
      const accessToken = "<%= access_token %>";

      async function getUserProfile() {
        const response = await fetch("https://api.spotify.com/v1/me", {
          headers: { Authorization: `Bearer ${accessToken}` },
        });

        const data = await response.json();
        console.log(data);
        document.getElementById("display-name").textContent = data.display_name;
        if (data.images.length > 0) {
          document.getElementById("profile-image").src = data.images[0].url;
        } else {
          document.getElementById("profile-image").src =
            "https://via.placeholder.com/60";
        }
      }
      async function getUserPlaylists() {
        const response = await fetch(
          "https://api.spotify.com/v1/me/playlists",
          {
            headers: { Authorization: `Bearer ${accessToken}` },
          }
        );

        const data = await response.json();
        const playlistsContainer = document.getElementById("playlists");

        data.items.forEach((playlist) => {
          const div = document.createElement("div");
          div.classList.add("playlist-card");
          div.innerHTML = `
          <a href="/playlist/<%= playlist.id %>">
          <img src="${
            playlist.images[0]?.url || "https://via.placeholder.com/200"
          }" alt="${playlist.name}" />
          <div class="details">
            <h3>${playlist.name}</h3>
            <p>${playlist.tracks.total} Tracks</p>
          </div>
          </a>
        `;
          playlistsContainer.appendChild(div);
        });
      }

      getUserProfile();
      getUserPlaylists();
    </script>
  </body>
</html>
